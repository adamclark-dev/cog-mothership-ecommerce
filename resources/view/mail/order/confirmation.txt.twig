{% extends 'Message:Mothership:CMS::mail:templates:main' %}
{% block content %}
{% block intro %}
Dear {{ order.user.name }},

Thank you for shopping at {{ merchant.companyName }}, your order details are as follows:
{% endblock intro %}

{% block details %}
ORDER NUMBER: {{ order.id }}

{% for payment in order.payments %}
	{% if payment.reference %}
PAYMENT REFERENCE: {{ payment.getCustomerFacingReference }}
	{% endif %}
{% endfor %}

ORDER DATE: {{ order.createdAt|date }}

ORDER DETAILS:
{% for row in order.items.getRows %}
	{{ row.quantity }} x {{ row.first.description }}
{% endfor %}

ORDER VALUE: {{ order.total|price }}

DELIVERY METHOD:
{{ order.shippingDisplayName }}

YOUR DELIVERY ADDRESS:
{{ order.getAddress('delivery').flatten|join("\n") }}

YOUR BILLING ADDRESS:
{{ order.getAddress('billing').flatten|join("\n") }}
{% endblock details %}
{% endblock content %}