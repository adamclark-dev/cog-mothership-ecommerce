{% extends 'Message:Mothership:Ecommerce::Checkout:checkout-layout' %}

{% block content %}
	<h2>Billing</h2>
	{{ form_start(billing) }}
		{{ form_rest(billing) }}
		<button type="submit">Update</button>
	{{ form_end(billing) }}

	<h2>Delivery</h2>
	{{ form_start(delivery) }}
