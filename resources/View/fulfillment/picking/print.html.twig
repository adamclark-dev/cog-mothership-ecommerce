<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>Site Admin</title>
</head>
	<body>
		<button type="submit" class="button small save">Print</button>
		<div id="wrapper">
			<div class="page">
				<table class="manifest">
					<thead>
					<tr>
						<th>Date/Time</th>
						<th>Name</th>
						<th>Order</th>
						<th>Shipping method</th>
						<th>Value</th>
					</tr>
					</thead>
					<tbody>
					{% for key, order in orders %}
						<tr>
							<td>{{ order.authorship.createdAt.date }}</td>
							<td>{{ order.user.name }}</td>
							<td>{{ order.id }}</td>
							<td>{{ order.shippingName }}</td>
							<td>{{ order.totalNet }}</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>
			{% for key, order in orders %}
				<div class="page">
					<table>
						<thead>
							<tr>
								<th>Brand</th>
								<th>Description</th>
								<th>Barcode</th>
								<th>Quantity</th>
							</tr>
						</thead>
						<tbody>
							{% for item in order.items %}
								<tr>
									<td>{{ item.brand }}</td>
									<td>{{ item.productName }}</td>
									<td>{{ item.barcode }}</td>
									<td>{{ item.quantity }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			{% endfor %}
			{% for key, order in orders %}
				<div class="page">
					<div class="packingslip">
						<h1>Delivery note</h1>
						<section>
							<dl>
								<dt>Billing address</dt>
								<dd>
									{% for line in order.getAddress('billing').lines %}
										{% if line | length > 0 %}
											{{ line }}<br />
										{% endif %}
									{% endfor %}
									{% if  order.getAddress('billing').town | length > 0 %}
										{{ order.getAddress('billing').town }}<br />
									{% endif %}
									{% if order.getAddress('billing').state | length > 0%}
										{{ order.getAddress('billing').state }}
									{% endif %}
									{% if order.getAddress('billing').postcode | length > 0%}
										{{ order.getAddress('billing').postcode }}<br />
									{% endif %}
									{% if order.getAddress('billing').country | length > 0 %}
										{{ order.getAddress('billing').country }}<br />
									{% endif %}
								</dd>
								<dt>Telephone</dt>
								<dd>
									{{ order.getAddress('billing').telephone }}
								</dd>
								<dt>Email</dt>
								<dd>
									{{ order.user.email }}
								</dd>
							</dl>
							<header>
								<h2 class="four col">Customer details</h2>
								<h2 class="two col">Order number</h2>
							</header>
						</section>
					</div>
				</div>
			{% endfor %}
		</div>
	</body>
</html>