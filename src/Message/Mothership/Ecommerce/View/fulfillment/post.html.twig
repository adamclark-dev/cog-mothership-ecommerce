{% extends '::fulfillment' %}

{% block process %}
	<ul>
		{% for dispatchType in dispatchTypes %}
			<li>
				<h3>{{ dispatchType.name }}</h3>
				<table>
					<thead>
						<tr>
							<th>Date/Time</th>
							<th>Name</th>
							<th>Order</th>
							<th>Shipping method</th>
							<th>Country</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for key, order in dispatchType.orders %}
							<tr>
								<td>ORDER TIME</td>
								<td><a href="#">{{ order.user.name }}</a></td>
								<td><a href="#">{{ order.id }}</a></td>
								<td>{{ order.shippingName }}</td>
								<td>{{ order.deliveryAddress.country }}</td>
								<td><a href="{{ url(linkRoute, {orderID: order.id}) }}" data-live>{{ action }}</a></td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</li>
		{% endfor %}
	</ul>
{% endblock %}